# Copy to .env and edit if needed
MGC_DB_PATH=./data/db.sqlite
MGC_DATA_DIR=./data
MGC_LOG_DIR=./logs

# Optional (later)
# STRIPE_SECRET_KEY=
# X_API_KEY=

# Marketing publish (optional)
# MGC_PUBLISH_LIVE=1
# MGC_MARKETING_WEBHOOK_URL=
# MGC_MARKETING_WEBHOOK_X=
# MGC_MARKETING_WEBHOOK_TIKTOK=
# MGC_MARKETING_WEBHOOK_INSTAGRAM_REELS=
# MGC_MARKETING_WEBHOOK_YOUTUBE_SHORTS=
# MGC_MARKETING_WEBHOOK_INCLUDE_MEDIA=1
# MGC_MARKETING_SCHEDULER_URL=
# MGC_MARKETING_SCHEDULER_AUTH=
# MGC_MARKETING_SCHEDULER_HEADERS=
# MGC_MARKETING_SCHEDULER_INCLUDE_MEDIA=1

# X (Twitter) credentials (optional)
# MGC_X_API_KEY=
# MGC_X_API_SECRET=
# MGC_X_ACCESS_TOKEN=
# MGC_X_ACCESS_TOKEN_SECRET=

# YouTube (optional)
# MGC_YT_ACCESS_TOKEN=
# MGC_YT_PRIVACY=unlisted
# MGC_YT_CATEGORY_ID=
# MGC_YT_RETRY=1
# MGC_YT_RETRY_MAX=3
# MGC_YT_RETRY_SLEEP=2
# MGC_YT_POLL=0
# MGC_YT_POLL_MAX=12
# MGC_YT_POLL_SLEEP=5

# Instagram Reels (optional)
# MGC_IG_ACCESS_TOKEN=
# MGC_IG_USER_ID=
# MGC_IG_SHARE_TO_FEED=false
# MGC_IG_POLL=1
# MGC_IG_POLL_MAX=10
# MGC_IG_POLL_SLEEP=3

# TikTok (optional)
# MGC_TIKTOK_ACCESS_TOKEN=
# MGC_TIKTOK_PRIVACY_LEVEL=PUBLIC
# MGC_TIKTOK_POLL=0
# MGC_TIKTOK_POLL_MAX=10
# MGC_TIKTOK_POLL_SLEEP=3

# Optional: public media base URL for platforms that require video_url.
# Supports placeholders like {context}, {schedule}, {period_key}, {media_path}, {media_file}, {marketing_media_path}.
# MGC_MARKETING_MEDIA_BASE=

# Suno provider (scaffold; paid API key required)
# MGC_SUNO_API_KEY=
# MGC_SUNO_API_BASE=
# MGC_SUNO_MODEL=auto
# MGC_SUNO_OUTPUT_FORMAT=mp3

# DiffSinger provider (scaffold; local model or remote endpoint)
# MGC_DIFFSINGER_ENDPOINT=
# MGC_DIFFSINGER_MODEL_DIR=
# MGC_DIFFSINGER_API_KEY=
# MGC_DIFFSINGER_VOICE=
# MGC_DIFFSINGER_CMD=
# MGC_DIFFSINGER_CMD_ARGS=
# MGC_DIFFSINGER_CMD_MODE=args
# MGC_DIFFSINGER_TIMEOUT=120
# MGC_DIFFSINGER_OUTPUT_FORMAT=wav
# MGC_DIFFSINGER_DURATION_SEC=30

# Which music generator provider to use: stub | riffusion
MGC_PROVIDER=stub

# Optional: restrict playlist selection to a provider (e.g. riffusion). Use "any" to disable.
# MGC_PLAYLIST_PROVIDER=
# MGC_DAILY_PLAYLIST_PROVIDER=
# MGC_WEEKLY_PLAYLIST_PROVIDER=

# Riffusion server endpoint (if using riffusion)
RIFFUSION_URL=http://127.0.0.1:3013/run_inference

# Riffusion generation params (lower steps = faster)
RIFFUSION_STEPS=25
RIFFUSION_GUIDANCE=7.0
RIFFUSION_DENOISE=0.75
